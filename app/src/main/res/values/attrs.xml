<resources>
    <attr name="fontPath" format="string"/>

    <attr name="statusBarBackground" format="color"/>

    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="contentLoadingLayout">
        <attr name="contentOverlayColor" format="reference|color"/>
        <attr name="contentLayoutRes" format="reference"/>
    </declare-styleable>
    <declare-styleable name="pullrefresh">
        <attr name="refreshView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>
    <declare-styleable name="navagation_bar">
        <attr name="rightButtonBackground" format="reference"/>
        <attr name="rightButtonText" format="reference"/>
        <attr name="leftButtonBackground" format="reference"/>
        <attr name="leftButtonText" format="reference"/>
        <attr name="isGobackButtonEnabled" format="boolean"/>
        <attr name="titleBackground" format="reference"/>
        <attr name="titleText" format="reference"/>
    </declare-styleable>
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="indicatorColor" format="color"/>
        <attr name="underlineColor" format="color"/>
        <attr name="tabDivider" format="reference|color"/>
        <attr name="dividerPaddingTopBottom" format="dimension"/>
        <attr name="dividerWidth" format="dimension"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="underlineHeight" format="dimension"/>
        <attr name="iconPadding" format="dimension"/>
        <attr name="tabPaddingLeft" format="dimension"/>
        <attr name="tabPaddingRight" format="dimension"/>
        <attr name="tabPaddingTop" format="dimension"/>
        <attr name="tabPaddingBottom" format="dimension"/>
        <attr name="scrollOffset" format="dimension"/>
        <attr name="tabBackground" format="reference|color"/>
        <attr name="shouldExpand" format="boolean"/>
        <attr name="tabTextAllCaps" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="scrollable_layout">
        <attr name="layout_hide" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="BaseDrawerMenuItemView">
        <attr name="content_class" format="string"/>
    </declare-styleable>
    <declare-styleable name="DrawerMenuItemView">
        <attr name="menu_icon" format="reference"/>
        <attr name="menu_name" format="reference|string"/>
    </declare-styleable>
    <declare-styleable name="AspectRatioRelativeLayout">
        <attr name="aspectRatio" format="float"/>
    </declare-styleable>
    <declare-styleable name="SquareRelativeLayout">
        <attr name="fitMode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="CirclePageIndicatorStyle" format="reference"/>

    <declare-styleable name="CirclePageIndicator">

        <attr name="centered" format="boolean"/>
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color"/>
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color"/>
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension"/>
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean"/>
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color"/>
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" format="dimension"/>
        <!-- View background -->
        <attr name="android:background"/>
    </declare-styleable>

    <attr name="IconViewStyle" format="reference"/>

    <declare-styleable name="IconView">
        <attr name="textColor" format="color"/>
        <attr name="itemRadius" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="padding" format="dimension"/>
        <attr name="itemMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LinearListLayout">
        <attr name="header" format="reference"/>
        <attr name="footer" format="reference"/>
    </declare-styleable>
    <declare-styleable name="DashedLineView">
        <attr name="DashedLineDistance" format="reference|dimension"/>
    </declare-styleable>
</resources>